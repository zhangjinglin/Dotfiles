{
    "editor.fontFamily": "'Source Code Variable Semibold', 'Fira Code Retina', 'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 24,
    "editor.fontLigatures": true,
    "editor.autoIndent": true,
    "files.autoSave": "onFocusChange",
    "explorer.openEditors.visible": 0,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.3,
    "vim.easymotion": true,
    "vim.easymotionMarkerHeight": 24,
    "vim.easymotionMarkerWidthPerChar": 12,
    "vim.easymotionMarkerFontSize": "14",
    "vim.easymotionMarkerYOffset": -15,
    "vim.hlsearch":true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
    "vim.statusBarColors.insert": "#BF616A",
    "vim.statusBarColors.visual": "#B48EAD",
    "vim.statusBarColors.visualline": "#B48EAD",
    "vim.statusBarColors.visualblock": "#A3BE8C",
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode": "#007ACC",
    "vim.statusBarColors.easymotionmode": "#007ACC",
    "vim.statusBarColors.easymotioninputmode": "#007ACC",
    "vim.statusBarColors.surroundinputmode": "#007ACC",
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [";", ";"],
            "after": ["<Esc>", "A", ";" , "<CR>"]
        },
        {
            "before": [",", ","],
            "after": ["<Esc>", "A", "," , "<CR>"]
        },
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.leader": ";",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "h"],
            "after": ["^"]
        },
        {
            "before": ["<leader>", "l"],
            "after": ["$"]
        }
    ],
    "vim.handleKeys": {
        "<C-k>": false,
         "<C-w>": false
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#8FBCBB",
        "statusBar.noFolderBackground": "#8FBCBB",
        "statusBar.debuggingBackground": "#8FBCBB",
        "statusBar.foreground": "#434C5E"
    },
    "workbench.statusBar.visible": true,
    "window.menuBarVisibility": "toggle",
    "workbench.activityBar.visible": true,
    "powermode.enabled": true,
    "powermode.presets": "flames",
    "workbench.colorTheme": "Solarized Dark",
    "terminal.integrated.fontFamily": "'Source code Variable'",
    "terminal.integrated.fontWeight": "700",
    "workbench.editor.highlightModifiedTabs": true
}
